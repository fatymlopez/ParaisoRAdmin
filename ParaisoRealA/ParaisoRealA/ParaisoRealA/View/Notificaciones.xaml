<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="White"
             xmlns:vm="clr-namespace:ParaisoRealA.ViewModel"
             x:Class="ParaisoRealA.View.Notificaciones">


    <StackLayout>
        <Button Text="Ciudad Universitaria UNIVO"
                x:Name="CDUNIVO"
                Clicked="CDUNIVO_Clicked"></Button>
        <Button Text="Maestrias Univo"
                x:Name="MUNIVO"
                Clicked="MUNIVO_Clicked"></Button>
        <Button Text="UMA "
                x:Name="UMAA"
                Clicked="UMAA_Clicked"></Button>
       
        <ListView x:Name="ListNotificaciones"
                  ItemSelected="ListNotificaciones_ItemSelected">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding id}"></Label>
                            <Label Text="{Binding idcliente}"></Label>
                            <Label Text="{Binding cliente.nombrecl}"></Label>
                            <Label Text="{Binding total}"></Label>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>
    </StackLayout>
    
    
    
    
    </ContentPage>