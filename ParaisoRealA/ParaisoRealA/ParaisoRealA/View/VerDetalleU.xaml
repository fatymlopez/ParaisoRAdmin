<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParaisoRealA.View.VerDetalleU"
              xmlns:locai="clr-namespace:ParaisoRealA.Controllers"
             BackgroundColor="White">
   
    <ContentPage.ToolbarItems>
        <ToolbarItem>
            <ToolbarItem.Icon>
                <FileImageSource File="usuario.png"></FileImageSource>
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ScrollView>
        <Frame OutlineColor="#8BC34A" CornerRadius="40" Margin="20">
            <StackLayout Margin="20">
                <StackLayout>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                <Label Text="Ver Detalle Usuario"
                       HorizontalOptions="Center"
                       FontAttributes="Bold"
                       FontSize="24"
                       TextColor="Black"
                       Margin="4">
                </Label>
                        <ActivityIndicator x:Name="indicatordu"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Start"
                                   Grid.Row="0"
                                   Color="Gray">
                        </ActivityIndicator>
                    </Grid>
                </StackLayout>
                <Label Text="(Editar)"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   FontSize="18"
                   TextColor="#8BC34A">
                </Label>
                <Label Text="Id Usuario"
                       FontAttributes="Bold"
                       FontSize="20"
                       Grid.Column="0"
                       Grid.Row="0"
                       Margin="4">
                </Label>
                <Label x:Name="idusu"
                       Text="{Binding id}"
                       FontAttributes="Bold"
                       FontSize="20"
                       TextColor="Black"
                       Grid.Column="1"
                       Grid.Row="0"
                       Margin="4">
                </Label>
                <Label Text="Nombre"
                       FontAttributes="Bold"
                       FontSize="20"
                       Margin="4">
                </Label>
                <Entry Text="{Binding nombre}"
                       x:Name="usuappnom"
                       FontAttributes="Bold"
                       FontSize="20"
                       TextColor="Black"
                       Margin="4"
                       Keyboard="Text">
                </Entry>
                <Label Text="Usuario"
                       FontAttributes="Bold"
                       FontSize="20"
                       Margin="4">
                </Label>
                <Entry Text="{Binding usuario}"
                       x:Name="usuarioapp"
                       FontAttributes="Bold"
                       FontSize="20"
                       TextColor="Black"
                       Margin="4"
                       Keyboard="Text">
                </Entry>
                <Label Text="Correo Electronico"
                       FontAttributes="Bold"
                       FontSize="20"
                       Margin="4">
                </Label>
                <Entry Text="{Binding emailusu}"
                       x:Name="correous"
                       FontAttributes="Bold"
                       FontSize="20"
                       TextColor="Black"
                       Margin="4"
                       Keyboard="Email">
                </Entry>
                <Label Text="Contraseña"
                        FontAttributes="Bold"
                        FontSize="20"
                        Margin="4">
                </Label>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <locai:CtrlEntry Text="{Binding passusu}"
                                     FontAttributes="Bold"
                                     FontSize="20"
                                     TextColor="Black"
                                     IsPassword="True"
                                     Grid.ColumnSpan="2"
                                     Grid.Column="0"
                                     x:Name="paswords"
                                     Margin="4">
                    </locai:CtrlEntry>
                    <Image Source="Password.png" 
                           HorizontalOptions="End" 
                           VerticalOptions="Center" 
                           Grid.Column="1" 
                           HeightRequest="30">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"
                                                  NumberOfTapsRequired="1">
                            </TapGestureRecognizer>
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>
                <StackLayout Margin="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Button Text="Actualizar Datos"
                                x:Name="actusu"
                                Clicked="Actusu_Clicked"
                                BackgroundColor="#8BC34A"
                                TextColor="White"
                                BorderRadius="20"
                                Grid.Column="0"
                                Grid.Row="0">
                        </Button>
                        <Button Text="Eliminar Usuario"
                                x:Name="EliminarUsu"
                                Clicked="EliminarUsu_Clicked"
                                BackgroundColor="#8BC34A"
                                TextColor="White"
                                BorderRadius="20"
                                Grid.Column="1"
                                Grid.Row="0">
                        </Button>
                    </Grid>
                </StackLayout>
            </StackLayout>
        </Frame>
    </ScrollView>
</ContentPage>