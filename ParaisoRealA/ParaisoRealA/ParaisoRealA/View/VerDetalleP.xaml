<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParaisoRealA.View.VerDetalleP">
    
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Categoria"></Label>
            <Label Text="{Binding categorias.nomcategoria}"></Label>

            <Label Text="Nombre del Producto"></Label>
            <Label Text="{Binding nomproducto}"></Label>

            <Label Text="Existencias"></Label>
            <Label Text="{Binding descripcion}"></Label>

            <Label Text="Precio"></Label>
            <Label Text="{Binding existencia}"></Label>

            <Label Text="Precio"></Label>
            <Label Text="{Binding precio}"></Label>

            <Button Text="Editar" Command="{Binding EditarPCommand}"></Button>
            
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>