<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParaisoRealA.View.VerUsuario">

    <ContentPage.ToolbarItems>
        <ToolbarItem>
            <ToolbarItem.Icon>
                <FileImageSource File="usuario.png"></FileImageSource>
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <StackLayout Margin="20">
        <StackLayout>
            <Label Text="Ver Usuarios Registrados" HorizontalOptions="Center" TextColor="Black"></Label>
            <Entry Placeholder="Buscar"></Entry>
        </StackLayout>
        <ScrollView>
            <ListView
                x:Name="UsuarioAppListView"
                ItemSelected="UsuarioAppListView_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding id}"></Label>
                                <Label Text="-"></Label>
                                <Label Text="{Binding nombre}"></Label>
                                <Label Text="{Binding usuario}"></Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>
    </StackLayout>

</ContentPage>