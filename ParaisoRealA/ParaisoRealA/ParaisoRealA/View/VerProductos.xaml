<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParaisoRealA.View.VerProductos">
   
        <ContentPage.ToolbarItems>
            <ToolbarItem>
                <ToolbarItem.Icon>
                    <FileImageSource File="update.png"></FileImageSource>
                </ToolbarItem.Icon>
            </ToolbarItem>
        </ContentPage.ToolbarItems>

        <StackLayout Margin="20">
            <StackLayout>
                <Label Text="Ver Productos" HorizontalOptions="Center" TextColor="Black"></Label>
                <Entry Placeholder="Buscar"></Entry>
            </StackLayout>
        <ScrollView>
            <ListView>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell></ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>
    </StackLayout>

   
</ContentPage>