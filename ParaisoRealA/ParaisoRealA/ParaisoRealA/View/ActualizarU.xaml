<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParaisoRealA.View.ActualizarU">

    <StackLayout Margin="20">
        <Label Text="Actualizar Usuario" TextColor="Black" HorizontalOptions="Center"></Label>
        
        <Label Text="Nombre"></Label>
        <Entry></Entry>

        <Label Text="Apellido"></Label>
        <Entry></Entry>

        <Label Text="Usuario"></Label>
        <Entry></Entry>

        <Label Text="Contraseña"></Label>
        <Entry></Entry>


        <StackLayout Orientation="Horizontal">
            <Button Text="Actualizar" HorizontalOptions="Center"   Command="{Binding ActualizarUCommand}"></Button>
            <Button Text="Eliminar" HorizontalOptions="Center"   Command="{Binding EliminarUCommand}"></Button>
        </StackLayout>

    </StackLayout>
</ContentPage>